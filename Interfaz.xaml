                </StackPanel>
                <Button Name="btnCheckUsers" Grid.Row="1" Grid.Column="0" Style="{StaticResource BotonRedondeado}"
                    Content="Usuarios locales"/>
                <Button Name="btnCheckWU" Grid.Row="1" Grid.Column="1" Style="{StaticResource BotonRedondeado}"
                    Content="Estado W.Update"/>
                <Button Name="btnCheckCrowdstrike" Grid.Row="1" Grid.Column="2" Style="{StaticResource BotonRedondeado}"
                    Content="Crowdstrike"/>
                <Button Name="btnCheckDominio" Grid.Row="2" Grid.Column="0" Style="{StaticResource BotonRedondeado}"
                    Content="Dominio"/>
                <Button Name="btnCheckJava" Grid.Row="2" Grid.Column="1" Style="{StaticResource BotonRedondeado}"
                    Content="Java"/>
                <Button Name="btnCheckPCName" Grid.Row="2" Grid.Column="2" Style="{StaticResource BotonRedondeado}"
                    Content="Nombre de equipo"/>
                <Button Name="btnCheckSoftware" Grid.Row="3" Grid.Column="0" Style="{StaticResource BotonRedondeado}"
                    Content="Software instalado"/>
